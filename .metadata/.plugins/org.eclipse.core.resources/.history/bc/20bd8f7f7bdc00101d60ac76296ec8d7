import java.util.Scanner;

public class arr6 {

	public static void main(String[] args) {
			int x[][] = new int[3][];
			x[0] = new int[4];
			x[1] = new int[3];
			x[2] = new int[6];
			
			Scanner sc =new Scanner(System.in);
			
			System.out.println("No of Rows : " + x.length);
			System.out.println("1st No of Values : " + x[0].length);
			System.out.println("2nd No of Values : " + x[1].length);
			System.out.println("3rd No of Values : " + x[2].length);
			
			
			for(int i=0;i<x.length;i++)
			{
				System.out.println("Enter " + x[i].length + " Values ");
				
				for(int j=0;j<x[i].length;j++)
				{
					x[i][j] = sc.nextInt();
				}				
			}
			
			for(int i=0;i<x.length;i++)
			{
				for(int j=0;j<x[i].length;j++)
				{
					System.out.print(x[i][j] + "  ");
				}
				System.out.println();
			}
			
	}

}
